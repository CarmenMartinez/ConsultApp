<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityMain"
        android:background="#FFFFFF">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="39dp" app:srcCompat="@drawable/Bartext"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="28dp" app:srcCompat="@drawable/Bartext"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="31dp" app:srcCompat="@drawable/Bartext"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp" app:srcCompat="@drawable/menubut"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="54dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"/>
    <TextView
            android:text="Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/background_light"
            android:textSize="24sp"/>
    <TextView
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintHorizontal_chainStyle="spread_inside" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="18sp"/>
    <TextView
            android:text="Empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView4" android:layout_marginEnd="15dp"
            android:textSize="24sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="3dp" android:textSize="18sp"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView2" app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/grapick" tools:layout_editor_absoluteY="75dp"
                    tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView6"/>
            <TextView
                    android:text="Description +"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/textViewx1" android:textSize="16sp"/>
            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                        <ListView android:layout_width="match_parent" android:layout_height="match_parent"
                            android:id="@+id/lv1"></ListView>
                    </LinearLayout>
            </ScrollView>
            <TextView
                    android:text="Main Problem +"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/textViewx2" android:textSize="16sp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="242dp" app:srcCompat="@drawable/foda" tools:layout_editor_absoluteY="162dp"
                    tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView7"/>
            <TextView
                    android:text="Questions +"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/textViewx3" android:textSize="16sp"/>
            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent">
                    <ListView android:layout_width="match_parent" android:layout_height="match_parent"></ListView>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>