<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/logo_desc"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_toEndOf="@id/logo"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_name"
            android:layout_toEndOf="@+id/textName"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:layout_toEndOf="@id/logo"
            android:layout_below="@+id/textName"
            android:padding="4dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/valueAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_address"
            android:layout_toEndOf="@+id/textAddress"
            android:layout_below="@+id/valueName"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textStyle="bold"
            android:layout_below="@+id/logo"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_description"
            android:layout_below="@+id/textDescription"
            android:padding="4dp"/>

        <ImageButton
            android:id="@+id/view_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_pr"
            android:layout_below="@+id/description"
            android:layout_toLeftOf="@+id/delete_project"
            android:background="@null"
            android:padding="4dp"
            />

        <ImageButton
            android:id="@+id/delete_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_pr"
            android:layout_below="@+id/description"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:padding="4dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
